<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/tvSportScheduleTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DateTime"
        android:id="@+id/tvSportScheduleDateTime"
        android:layout_below="@+id/tvSportScheduleTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reminder"
        android:id="@+id/tvSportScheduleReminder"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignBaseline="@+id/tvSportScheduleDateTime"
        android:layout_alignBottom="@+id/tvSportScheduleDateTime"
        android:layout_toRightOf="@+id/tvSportScheduleDateTime"
        android:layout_toEndOf="@+id/tvSportScheduleDateTime" />
</RelativeLayout>